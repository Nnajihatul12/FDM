<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    tools:context=".FLOODVICTIM.ViewDetailNGO14">

    <TextView
        android:id="@+id/detailngo14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VIEW DETAIL NGO"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logopic14"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/pic14"
        app:layout_constraintTop_toBottomOf="@id/detailngo14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="270dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/vdname14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic14"
        app:layout_constraintTop_toBottomOf="@id/detailngo14"
        android:layout_marginStart="10dp"
        android:text="SikhInside"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vdemail14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic14"
        app:layout_constraintTop_toBottomOf="@id/vdname14"
        android:layout_marginStart="10dp"
        android:text="sikhinside@gmail.com"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/vdphone14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic14"
        app:layout_constraintTop_toBottomOf="@id/vdemail14"
        android:layout_marginStart="10dp"
        android:text="+603 - 7955 8645"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/vdadd14"
        android:layout_width="184dp"
        android:layout_height="52dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif"
        android:text="Jalan Utara, and, \nLorong Utara (B), Pjs 52, \n46860 Petaling Jaya, Selangor"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/logopic14"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/vdphone14" />

    <TextView
        android:id="@+id/titlengo14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VOLUNTEERS AND MONETARY AID"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vdadd14"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/type14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Type of donation provided"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/titlengo14"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/donation14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="- House cleaning
        \n\n- Powerbank
        \n\n- Food and water
        \n\n- Infrastructure Maintenance
        \n\n- Cash assisstance
        \n\n- Electrical appliances"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type14" />

    <Button
        android:id="@+id/form14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="REQUEST DONATION"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>