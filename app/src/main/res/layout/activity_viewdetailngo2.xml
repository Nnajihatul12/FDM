<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    tools:context=".FLOODVICTIM.ViewDetailNGO2">

    <TextView
        android:id="@+id/detailngo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VIEW DETAIL NGO"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logopic2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/pic2"
        app:layout_constraintTop_toBottomOf="@id/detailngo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="270dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/vdname2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic2"
        app:layout_constraintTop_toBottomOf="@id/detailngo2"
        android:layout_marginStart="10dp"
        android:text="Mahasiswa Keadilan Malaysia"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vdemail2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic2"
        app:layout_constraintTop_toBottomOf="@id/vdname2"
        android:layout_marginStart="10dp"
        android:text="admin@msiswakeadilan.com"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/vdphone2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic2"
        app:layout_constraintTop_toBottomOf="@id/vdemail2"
        android:layout_marginStart="10dp"
        android:text="xxx-xxx xxxx"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/vdadd2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic2"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/vdphone2"
        android:text="Ibu Pejabat Parti KEADILAN Rakyat, \nMerchant Square, A-1-09 (3A), \nJalan Tropicana Selatan 1, \n47410 Petaling Jaya, Selangor"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/titlengo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VOLUNTEERS AND MONETARY AID"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vdadd2"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/type2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Type of donation provided"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/titlengo2"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/donation2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="- House cleaning
        \n\n- Powerbank
        \n\n- Food and water
        \n\n- Infrastructure Maintenance
        \n\n- Cash assisstance
        \n\n- Electrical appliances"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type2" />

    <Button
        android:id="@+id/form2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="REQUEST DONATION"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>