<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    tools:context=".FLOODVICTIM.ViewDetailNGO5">

    <TextView
        android:id="@+id/detailngo5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="VIEW DETAIL NGO"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/logopic5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/pic5"
        app:layout_constraintTop_toBottomOf="@id/detailngo5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="270dp"
        android:layout_marginStart="50dp"/>

    <TextView
        android:id="@+id/vdname5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic5"
        app:layout_constraintTop_toBottomOf="@id/detailngo5"
        android:layout_marginStart="10dp"
        android:text="Angkatan Belia Islam Malaysia"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/vdemail5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic5"
        app:layout_constraintTop_toBottomOf="@id/vdname5"
        android:layout_marginStart="10dp"
        android:text="sap@abim.org.my"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif" />

    <TextView
        android:id="@+id/vdphone5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic5"
        app:layout_constraintTop_toBottomOf="@id/vdemail5"
        android:layout_marginStart="10dp"
        android:text="+603 â€“ 4108 4500"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/vdadd5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logopic5"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/vdphone5"
        android:text="Sekretariat ABIM Pusat, \nNo. 6, Jalan TC 2A/2, \nTaman Cemerlang, \n53100 Kuala Lumpur"
        android:layout_marginTop="1dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/titlengo5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/bangers"
        android:text="VOLUNTEERS AND HEALTH AID"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vdadd5" />

    <TextView
        android:id="@+id/type5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Type of donation provided"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="70dp"
        app:layout_constraintTop_toBottomOf="@id/titlengo5"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/donation5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="- Dry foods
        \n\n- Hygiene kits
        \n\n- Portable water
        \n\n- Provide medicines and first aid kit
        \n\n- Ambulance services
        \n\n- Blankets"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type5"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/form5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="REQUEST DONATION"
        android:backgroundTint="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>