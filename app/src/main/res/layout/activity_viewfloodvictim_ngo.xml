<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".NGO.ViewFloodVictim_NGO">

    <TextView
        android:id="@+id/listfv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LIST OF FLOOD VICTIMS"
        android:fontFamily="@font/bangers"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"/>

   <ImageView
       android:id="@+id/picuser"
       android:layout_width="45dp"
       android:layout_height="40dp"
       android:src="@drawable/person"
       app:layout_constraintTop_toBottomOf="@id/listfv"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_marginTop="10dp"
       android:layout_marginStart="45dp"/>

    <TextView
        android:id="@+id/fvname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FV NAME"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/picuser"
        app:layout_constraintTop_toBottomOf="@id/listfv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/fvphone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="FV PHONE"
        android:fontFamily="sans-serif"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/picuser"
        app:layout_constraintTop_toBottomOf="@id/fvname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp" />

    <ImageView
        android:id="@+id/vdfv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/viewdetail"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="45dp"
        app:layout_constraintStart_toEndOf="@id/picuser"
        android:layout_marginStart="245dp"
        app:layout_constraintTop_toBottomOf="@id/listfv"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>